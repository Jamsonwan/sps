<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.qut.sps.aty.GroupInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="250dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:fitsSystemWindows="true"
            android:id="@+id/group_chat_room_collapsing_toolbar"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_height="match_parent">

            <ImageView
                android:fitsSystemWindows="true"
                android:id="@+id/group_icon"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/group_name"
                app:layout_collapseMode="parallax"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/group_chat_room_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/my_group_note"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSoftBlack"
                    android:layout_weight="1"
                    android:text="我的群名片"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/shink"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <LinearLayout
                android:id="@+id/group_member_list"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSoftBlack"
                    android:layout_weight="1"
                    android:text="群成员名单"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/shink"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <LinearLayout
                android:id="@+id/let_us_dance"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSoftBlack"
                    android:layout_weight="1"
                    android:text="一起跳舞吧"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/shink"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/make_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSoftBlack"
                    android:layout_weight="1"
                    android:text="预约新舞蹈"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/shink"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/invite_new_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSoftBlack"
                    android:layout_weight="1"
                    android:text="邀请新伙伴"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/shink"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSoftBlack"
                    android:layout_weight="1"
                    android:text="群介绍"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="5dp"
                    android:textSize="16sp"
                   android:textColor="@color/colorTextSoftBlack"
                   android:id="@+id/group_description"
                   android:layout_width="match_parent"
                   android:layout_height="70dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:id="@+id/delete_group_message"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSoftBlack"
                    android:text="删除群记录"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/exit_group"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#FF0000"
                    android:text="退出该群"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/dismiss_group"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#FF0000"
                    android:text="解散该群"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
