<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/my_friends_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/my_friends_choose_img"
                    android:padding="10dp"
                    android:src="@drawable/shink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="3dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:text="我的好友"
                    android:layout_toRightOf="@+id/my_friends_choose_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/my_friends_choose"
                android:visibility="gone"
                android:layout_marginTop="6dp"
                android:id="@+id/my_friends_recycler_view"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_below="@+id/my_friends_recycler_view"
                android:layout_marginBottom="10dp"
                android:id="@+id/my_build_team_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/my_build_team_choose_img"
                    android:padding="10dp"
                    android:src="@drawable/shink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="3dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="我创建的团队"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/my_build_team_choose"
                android:id="@+id/my_build_team_recycler_view"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_below="@+id/my_build_team_recycler_view"
                android:layout_marginBottom="10dp"
                android:id="@+id/my_join_team_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/my_join_team_choose_img"
                    android:src="@drawable/shink"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000000"
                    android:layout_marginTop="3dp"
                    android:textSize="16sp"
                    android:text="我加入的团队"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/my_join_team_choose"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:visibility="gone"
                android:id="@+id/my_join_team_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_below="@+id/my_join_team_recycler_view"
                android:layout_marginBottom="10dp"
                android:id="@+id/my_collection_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/shink"
                    android:id="@+id/my_collection_choose_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="3dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="我的收藏"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/my_collection_choose"
                android:visibility="gone"
                android:id="@+id/my_collection_recycler_view"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
