<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qut.sps.aty.MakeDateActivity">

    <include layout="@layout/title_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/date_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#000">
            <TextView
                android:layout_width="90dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="群名："/>
            <TextView
                android:id="@+id/group_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#000">
            <TextView
                android:layout_width="90dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="预约人："/>
            <TextView
                android:id="@+id/date_people"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:textColor="#000">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="地点："
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:maxLines="2"
                android:id="@+id/date_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="#000"
            android:layout_weight="0.29">

            <TextView
                android:id="@+id/textView"
                android:layout_width="71dp"
                android:layout_height="53dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:text="时间："
                android:textColor="#000"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1.05">

                <LinearLayout
                    android:id="@+id/day_text"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/border_another_roval">

                    <TextView
                        android:id="@+id/date_day"
                        android:layout_width="231dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:layout_marginTop="20dp"
                        android:background="#e8e8e8"
                        android:textColor="#000" />
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="#14008800" />

                <LinearLayout
                    android:id="@+id/time_text"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/border_another_roval">

                    <TextView
                        android:id="@+id/date_time"
                        android:layout_width="231dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"

                        android:layout_marginTop="20dp"
                        android:background="#e8e8e8"
                        android:textColor="#000"
                        android:textColorHint="#58000000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
